<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MetaInjectorLicenseManager" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#03DAC5</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:navigationBarColor">@color/app_background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="DashboardCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="DashboardCardLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DashboardCardLayout.Icon">
        <item name="android:minHeight">100dp</item>
    </style>

    <style name="DashboardCardIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="DashboardCardTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#64748B</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DashboardCardTitle.White">
        <item name="android:textColor">#E2E8F0</item>
    </style>

    <style name="DashboardCardValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#1E293B</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DashboardCardValue.White">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="FormLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">#334155</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FormEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FormEditText.ReadOnly">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:textColor">#64748B</item>
    </style>

    <style name="FormSpinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>


</resources>
