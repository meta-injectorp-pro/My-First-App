<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E2E8F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvResponseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1E293B"/>
            <TextView
                android:id="@+id/tvResponseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-08-20"
                android:layout_alignParentEnd="true"
                android:textColor="#475569"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvResponseEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="customer@email.com"
            android:textSize="14sp"
            android:textColor="#64748B"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvResponsePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: 0123456789"
            android:textSize="14sp"
            android:textColor="#64748B"
            android:layout_marginTop="2dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E2E8F0"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvResponsePackage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Package: Monthly"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvResponseAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Amount: 129 BDT" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E2E8F0"
                android:layout_marginHorizontal="12dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvResponsePaymentMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Method: bKash" />

                <TextView
                    android:id="@+id/tvResponseTrxId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="TrxID: ABC123XYZ" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnViewScreenshot"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Payment Screenshot"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>