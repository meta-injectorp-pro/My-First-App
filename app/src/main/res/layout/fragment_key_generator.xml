<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F0F4F8"
    tools:context=".KeyGeneratorFragment">

    <!-- Generate and Add Keys Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/generate_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/title_generate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generate and Add Keys"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <LinearLayout
                android:id="@+id/input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/title_generate"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/label_num_keys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of Keys:"/>

                <EditText
                    android:id="@+id/etNumberOfKeys"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/edit_text_background"
                    android:inputType="number"
                    android:padding="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/input_layout"
                android:layout_marginTop="8dp"
                android:gravity="end">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnClear"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clear"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnGenerate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Generate Keys"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Generated Keys Display Section -->
    <TextView
        android:id="@+id/title_generated_keys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generated Keys"
        android:layout_below="@id/generate_card"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/keys_display_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_generated_keys"
        android:layout_above="@id/action_bar"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvGeneratedKeys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:textIsSelectable="true"/>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Action Bar -->
    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|end"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp">

        <ProgressBar
            android:id="@+id/progressBarAddKeys"
            style="?android:attr/progressBarStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:visibility="invisible"
            android:indeterminate="true"/>

        <Button
            android:id="@+id/btnAddKeysToDb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Database"
            android:backgroundTint="#28A745"/>
    </LinearLayout>

</RelativeLayout>
