<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard Card Colors"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <include layout="@layout/color_picker_item"
            android:id="@+id/colorPickerTotalUsers" />

        <include layout="@layout/color_picker_item"
            android:id="@+id/colorPickerActiveUsers" />

        <include layout="@layout/color_picker_item"
            android:id="@+id/colorPickerExpiredUsers" />

        <include layout="@layout/color_picker_item"
            android:id="@+id/colorPickerPendingUsers" />

        <include layout="@layout/color_picker_item"
            android:id="@+id/colorPickerLicensesSent" />

        <include layout="@layout/color_picker_item"
            android:id="@+id/colorPickerDisabledUsers" />


    </LinearLayout>
</ScrollView>