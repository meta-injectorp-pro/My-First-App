<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="#FFE0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvBugReportName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"/>
            <TextView
                android:id="@+id/tvBugReportDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-08-22"
                android:layout_alignParentEnd="true"
                android:textColor="#757575"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvBugReportVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version: 1.0.0"
            android:layout_marginTop="4dp"
            android:textStyle="italic"
            android:textColor="#757575"/>

        <TextView
            android:id="@+id/tvBugReportDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Description of the bug will appear here. It might be a long text."
            android:textColor="#212121"
            android:maxLines="3"
            android:ellipsize="end"/>

        <Button
            android:id="@+id/btnViewBugScreenshot"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Screenshot"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>